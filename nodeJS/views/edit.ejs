<% include partial/top %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit : <%=editBlog.title%></div>
    <form class="ui form" action="/blogs/<%= editBlog._id%>?_method=PUT" method="POST">
        <div class="ui field">
            <label>Title</label>
            <input type="text" value="<%=editBlog.title%>" name="blog[title]">
        </div>
        <div class="ui field">
            <label>Image URL</label>
            <input type="text" value="<%=editBlog.image%>" name="blog[image]">
        </div>
        <div class="ui field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=editBlog.body%></textarea> 
        </div>
        <button class="ui button">Update</button>
    </form>
</div>


